@model Dominio.Model.Produto



<div class="container">
    <div class="text-center">
        <h2> Produto </h2>
    </div>
    <div class="row">
        <div class="offset-5">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@Model.UrlImage" alt="">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text">@String.Format("{0:C}", Model.Price.ToString())</p>
                    <a href="#" class="btn btn-success">Comprar</a>
                </div>
            </div>
        </div>
    </div>
</div>
